<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProfile name="prod">
        <!-- Send debug messages to System.out -->
        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <!-- By default, encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
            <encoder>
                <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{5} - %msg%n</pattern>
                <charset>cp866</charset>
            </encoder>
        </appender>
        <appender name="STDOUT2" class="ch.qos.logback.core.ConsoleAppender">
            <!-- By default, encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
            <encoder>
                <pattern>%msg%n</pattern>
                <!--                <charset>cp866</charset>-->
            </encoder>
        </appender>

        <appender name="FILE_REQUEST" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>C:/SAS/AllForIntegro/SparLog/RequestLog.log</file>
            <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                <charset>UTF-8</charset>
                <Pattern>%d{yyyy-MM-dd_HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Pattern>
            </encoder>

            <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
                <FileNamePattern>C:/SAS/AllForIntegro/SparLog/RequestLog.%i.log.zip</FileNamePattern>
                <MinIndex>1</MinIndex>
                <MaxIndex>10</MaxIndex>
            </rollingPolicy>

            <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
                <MaxFileSize>5GB</MaxFileSize>
            </triggeringPolicy>
        </appender>
        <appender name="FILE_RESPONSE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>C:/SAS/AllForIntegro/SparLog/ResponseLog.log</file>
            <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                <charset>UTF-8</charset>
                <Pattern>%d{yyyy-MM-dd_HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Pattern>
            </encoder>

            <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
                <FileNamePattern>C:/SAS/AllForIntegro/SparLog/ResponseLog.%i.log.zip</FileNamePattern>
                <MinIndex>1</MinIndex>
                <MaxIndex>10</MaxIndex>
            </rollingPolicy>

            <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
                <MaxFileSize>5GB</MaxFileSize>
            </triggeringPolicy>
        </appender>
        <appender name="Default" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>C:/SAS/AllForIntegro/SparLog/App.log</file>
            <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
