                <MaxFileSize>5GB</MaxFileSize>
            </triggeringPolicy>
        </appender>

        <appender name="FILE_RESPONSE_STATUS" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>C:/SAS/AllForIntegro/SparLog/ResponseStatus.log</file>
