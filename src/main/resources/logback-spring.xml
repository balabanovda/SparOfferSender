        </appender>
        <logger name="Request" level="INFO" additivity="false">
            <!--        <appender-ref ref="STDOUT" />-->
            <appender-ref ref="FILE_REQUEST"/>
        </logger>
        <logger name="Response" level="INFO" additivity="false">
            <!--        <appender-ref ref="STDOUT" />-->
            <appender-ref ref="FILE_RESPONSE"/>
        </logger>
        <logger name="Request_Status" level="INFO" additivity="false">
            <!--        <appender-ref ref="STDOUT" />-->
            <appender-ref ref="FILE_REQUEST_STATUS"/>
        </logger>
        <logger name="Response_Status" level="INFO" additivity="false">
            <!--        <appender-ref ref="STDOUT" />-->
            <appender-ref ref="FILE_RESPONSE_STATUS"/>
        </logger>

        <!--        <logger name="App_log" level="INFO" additivity="false">-->
        <!--            &lt;!&ndash;        <appender-ref ref="STDOUT" />&ndash;&gt;-->
        <!--            <appender-ref ref="STDOUT" />-->
        <!--            <appender-ref ref="Default"/>-->
        <!--        </logger>-->
        <!-- By default, the level of the root level is set to DEBUG -->
        <root name="App_log" level="INFO">
            <appender-ref ref="STDOUT"/>
            <!--            <appender-ref ref="STDOUT2" />-->
            <appender-ref ref="Default"/>
        </root>
    </springProfile>


